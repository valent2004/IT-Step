@model IEnumerable<WebValik.Data.Entities.ProductEntity>

<div class="container mt-4">
    <h2>Product Search Results</h2>

    <!-- Search Form -->
    <form asp-action="Search" method="get" class="d-flex mb-4">
        <input class="form-control me-2" type="text" name="name" placeholder="Search by Name" aria-label="Search by Name" value="@Context.Request.Query["name"]" />
        <input class="form-control me-2" type="number" name="minPrice" placeholder="Min Price" aria-label="Min Price" value="@Context.Request.Query["minPrice"]" />
        <input class="form-control me-2" type="number" name="maxPrice" placeholder="Max Price" aria-label="Max Price" value="@Context.Request.Query["maxPrice"]" />
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

    @if (Model.Any())
    {
        <!-- Products Table -->
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.Category?.Name</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination controls -->
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Search", new { page = i, name = Context.Request.Query["name"], minPrice = Context.Request.Query["minPrice"], maxPrice = Context.Request.Query["maxPrice"] })">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <p>No products found.</p>
    }
</div>